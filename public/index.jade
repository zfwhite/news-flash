            br

    script(src='http://ajax.googleapis.com/ajax/libs/angularjs/1.4.3/angular.js')
    script(src='http://ajax.googleapis.com/ajax/libs/angularjs/1.4.3/angular-animate.js')
    script(src='http://angular-ui.github.io/bootstrap/ui-bootstrap-tpls-0.13.3.js')
    script(src='default.js')
